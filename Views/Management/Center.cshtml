                                if ($(this).text().trim() === title)
                                    $(this).addClass('linkBlue');
                            });
                        }
                        setLinkBlue();

                        /**
                         * 拿到cookie中的用户登录信息
                         */
                        var ckacount = getCookie("account");
                        console.log("ckacount:" + ckacount);

                        ////AES加密，解密
                        //function Encrypt(word) {
