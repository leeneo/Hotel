                        //}
                        //alert(Encrypt("123"));
                        //alert(Decrypt(ckacount));

                        //解决输入法遮挡
                        var $nsurePwd = $('#ne-sureInp');
                        var $modal = $('.modal-dialog');
                        $nsurePwd.click(function () {
                            $modal.css('margin-top', '-6rem');
                            console.log('window.scrollTop:' + window.scrollTop + 'px')
                        });

                        //修改密码保存事件
                        $('.ne-sub').click(function () {

                            //获取缓存密码
                            var $logpwd = $('#logpwd');
                            var logpwd = $logpwd.data('pwd');
                            if (logpwd.trim() == '') {
                                alert("请退出系统重新登录后，再修改密码");
                                return;
                            }

                            var $nOld = $('#ne-oldInp');
                            var $nPwd = $('#ne-pwdInp');
                            var $hpbk = $('#helpBlock');
                            var oldpwd = $nOld.val().trim();
                            var newpwd = $nPwd.val().trim();
                            var surepwd = $nsurePwd.val().trim();

                            if (oldpwd == '' || newpwd == '' || surepwd == '') {
                                $hpbk.fadeOut();
                                $hpbk.parent().addClass('has-error');
                                $hpbk.text('密码不能为空，请重新输入');
                                $hpbk.fadeIn();
                            } else if (oldpwd.length < 3 || newpwd.length < 3 || surepwd.length < 3) {
                                $hpbk.fadeOut();
                                $hpbk.parent().addClass('has-error');
                                $hpbk.text('密码位数不足，请重新输入');
                                $hpbk.fadeIn();
                            } else if (oldpwd.length > 16 || newpwd.length > 16 || surepwd.length > 16) {
                                $hpbk.fadeOut();
                                $hpbk.parent().addClass('has-error');
                                $hpbk.text('密码位数过长，请重新输入');
                                $hpbk.fadeIn();
                            } else if (newpwd !== surepwd) {
                                $hpbk.fadeOut();
                                $hpbk.parent().addClass('has-error');
                                $hpbk.text('密码输入不一致，请重新输入');
                                $hpbk.fadeIn();
                            } else if (oldpwd == logpwd) {
                                console.log(oldpwd);
                                $.post('/Management/EditPassword', { account: ckacount, pwd: newpwd }, function (e) {
                                    $modal.css('margin-top', '0rem');

                                    alert(e.msg);
                                    if (e.success) {
                                        location.reload();
                                    }
                                });
                            } else {
                                $hpbk.fadeOut();
                                $hpbk.parent().addClass('has-error');
                                $hpbk.text('旧密码不正确，请重新输入');
                                $hpbk.fadeIn();
                            }

                        });

